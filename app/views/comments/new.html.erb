<p> Adding a comment to <strong><em><%= @photo_owner%>'s</em></strong> photo </p>
<img src="/images/<%=@photo.file_name%>" alt=""/> <br/>

<% if flash[:notice] %>
	<p class="notext left5"> <%= flash[:notice] %></p>
<%end%>

<p class="comment_create"> Please enter your comment: </p>

<%= form_for @comment,:url => {:action => "create/#{@photo_id}"} do |f| %>
	<%= f.text_area (:comment), :class => "comment_textarea"%><br />
	<%= submit_tag "Post"%>
<%end%>